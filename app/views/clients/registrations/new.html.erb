<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-user"></i> <%= title 'Become a Client' %></h3>
  </div>

  <div class="panel-body">
    <p>Sign up for free today to:</p>

    <ul>
    	<li>Post reviews for masseurs</li>
    	<li>Create a list of your favorites</li>
    	<li>Communicate directly and privately with masseurs</li>
    	<li>Be updated on new masseurs added in your area</li>
    	<li>Be advised of masseurs travelling to your area</li>
    	<li>Use the appointment scheduling service</li>
    </ul>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'col-md-12'}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
    		<div class="row">
    			<div class="col-md-6">
    		    <%= f.input :email, required: true, autofocus: true, hint: t(:email_signup_hint) %>
    			</div>

    			<div class="col-md-3">
    		    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    			</div>

          <div class="col-md-3">
            <%= f.input :password_confirmation, label: 'Confirm Password', required: true %>
          </div>
    		</div>

        <div class="row">
          <div class="col-md-6">
            <%= f.input :screen_name, hint: 'If you don\'t set a screen name, masseurs will see your first name.' %>
          </div>

          <div class="col-md-6">
						<%= f.input :dob, start_year: (Time.now.year - 18), end_year: (Time.now.year - 100), order: [:month, :day, :year], prompt: {month: 'Birth month', day: 'Birth day', year: 'Birth year'}, label: 'Birth Date', hint: 'All masseurs must be at least 18.', required: true, input_html: {class: 'form-control'} %>
          </div>
    		</div>

        <div class="alert alert-info">
  			  <i class="fa fa-exclamation-triangle"></i> We'll <em>only</em> use the following to find masseurs near you and send you updates that you request.
        </div>

        <div class="row">
    			<div class="col-md-6">
    				<%= f.input :first_name, required: true %>
    			</div>

    			<div class="col-md-6">
    				<%= f.input :last_name, required: true %>
    			</div>
        </div>

    		<div class="row">
    			<div class="col-md-3">
    				<%= f.input :city, required: true %>
    			</div>

    			<div class="col-md-3">
    				<%= f.input :state, label: 'State/Province', collection: us_states, required: true %>
    			</div>

    			<div class="col-md-3">
    				<%= f.input :country, label: 'Country', priority: ['US', 'MX'], required: true %>
    			</div>

    			<div class="col-md-3">
    				<%= f.input :zip, label: 'Zip/Postal Code' %>
    			</div>
    		</div>

        <div class="row">
          <div class="col-md-6">
        		<%= f.input :phone, placeholder: '(555) 555-5555', required: true %>
          </div>

          <div class="col-md-6">
        		<%= f.input :phone_type, collection: ['Mobile', 'Landline'], required: true %>
          </div>
        </div>

    		<%= f.input :email_new_masseurs, label: 'Notify me when a new masseur is added in my area', input_html: {checked: true} %>

    		<%= f.input :email_masseur_profile_update, label: 'Notify me when a masseur updates his profile or images', input_html: {checked: true} %>

    		<%= f.input :email_weekly_update, label: 'Send me a weekly update of new reviews for masseurs in my area', input_html: {checked: true} %>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign up", class: 'btn btn-lg btn-primary', data: {disable_with: 'Signing up...'}  %>
      </div>
    <% end %>

  </div>
</div>
