<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">
					<i class="fa fa-envelope"></i> <%= title 'Contact Us' %>
				</h3>
			</div>
	
			<div class="panel-body">
				<div class="row">
				  
				  <%= simple_form_for :contact, url: contact_path, method: :post, html: {class: 'col-md-12'} do |f| %>
				    <%= f.error_notification %>
  
				    <%= f.input :name, label: 'Your Name', input_html: {value: (current_user ? current_user.full_name : nil)} %>
				    <%= f.input :email, input_html: {value: (current_user ? current_user.email : nil)} %>  
  
				    <%= f.input :message, as: :text %>
		
						

						<div class="g-recaptcha" data-sitekey="6LfHZ2QUAAAAAKIE7vqU2iQDLInd0nyYfahu0f7P"></div>
						<br>
						<p class="text-center">
					    <%= f.submit 'Send Message', class: 'btn btn-primary', data: {disable_with: 'Sending...'} %>
						</p>
				  <% end %>
				</div>		
			</div>
		</div>		
	</div>
</div>