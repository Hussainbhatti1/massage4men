<h2>Smoking Frequency Options <small><%= @smoking_frequencies.count %> total</small></h2>
<% if @smoking_frequencies.count > 0 %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Option</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @smoking_frequencies.each_with_index do |smoking_frequency, i| %>
        <tr>
          <td>
            <%= simple_form_for [:admin, smoking_frequency] do |f| %>
              <%= f.input :frequency, label: false %>
          </td>
          <td>
              <%= f.button :button, class: 'btn btn-primary' do %>
                <i class="fa fa-save"></i> Save
              <% end %>
            <% end %>
          </td>            

          <td>
            <%= link_to admin_smoking_frequency_path(smoking_frequency), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this smoking frequency option?'} do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    There are no smoking frequency options in the system. <%= link_to new_admin_smoking_frequency_path, 'Click here to add one.' %>
  </div>
<% end %>