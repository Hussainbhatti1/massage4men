<h2>Hair Color Options <small><%= @hair_colors.count %> total</small></h2>
<% if @hair_colors.count > 0 %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Option</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @hair_colors.each do |hair_color| %>
        <tr>
          <td><%= hair_color.name %></td>
          <td>
            <%= link_to edit_admin_hair_color_path(hair_color), class: 'btn btn-primary' do %>
              <i class="fa fa-pencil"></i> Edit
            <% end %>
          </td>
          
          <td>
            <%= link_to admin_hair_color_path(hair_color), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this hair color option?'} do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    There are no hair color options in the system. <%= link_to new_admin_hair_color_path, 'Click here to add one.' %>
  </div>
<% end %>