<h2>Build Options <small><%= @builds.count %> total</small></h2>
<% if @builds.count > 0 %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Option</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @builds.each do |build| %>
        <tr>
          <td><%= build.name %></td>
          <td>
            <%= link_to edit_admin_build_path(build), class: 'btn btn-primary' do %>
              <i class="fa fa-pencil"></i> Edit
            <% end %>
          </td>
          
          <td>
            <%= link_to admin_build_path(build), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this body hair?'} do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    There are no build options in the system. <%= link_to new_admin_build_path, 'Click here to add one.' %>
  </div>
<% end %>