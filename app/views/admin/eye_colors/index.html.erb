<h2>Eye Color Options <small><%= @eye_colors.count %> total</small></h2>
<% if @eye_colors.count > 0 %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Option</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @eye_colors.each do |eye_color| %>
        <tr>
          <td><%= eye_color.name %></td>
          <td>
            <%= link_to edit_admin_eye_color_path(eye_color), class: 'btn btn-primary' do %>
              <i class="fa fa-pencil"></i> Edit
            <% end %>
          </td>
          
          <td>
            <%= link_to admin_eye_color_path(eye_color), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this eye color option?'} do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    There are no eye color options in the system. <%= link_to new_admin_eye_color_path, 'Click here to add one.' %>
  </div>
<% end %>