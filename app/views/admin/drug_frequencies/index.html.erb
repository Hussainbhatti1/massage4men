<h2>Drug Frequency Options <small><%= @drug_frequencies.count %> total</small></h2>
<% if @drug_frequencies.count > 0 %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Option</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @drug_frequencies.each do |drug_frequency| %>
        <tr>
          <td><%= drug_frequency.frequency %></td>
          <td>
            <%= link_to edit_admin_drug_frequency_path(drug_frequency), class: 'btn btn-primary' do %>
              <i class="fa fa-pencil"></i> Edit
            <% end %>
          </td>
          
          <td>
            <%= link_to admin_drug_frequency_path(drug_frequency), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this drug frequency option?'} do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    There are no drug frequency options in the system. <%= link_to new_admin_drug_frequency_path, 'Click here to add one.' %>
  </div>
<% end %>