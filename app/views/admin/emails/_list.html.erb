<% if @emails.count > 0 %>
<table class="table table-responsive">
	<thead>
		<tr>
			<th>Subject</th>
			<th></th>
		</tr>
	</thead>
	
	<tbody>
		<% @emails.each do |email| %>
			<tr>
				<td class="col-sm-9"><%= email.subject %></td>
				<td class="col-sm-3">
					<%= link_to [:admin, email], class: 'btn btn-default', data: {toggle: 'modal', target: '.modal'} do %>
						<i class="fa fa-eye"></i> Preview
					<% end %>
					
					<%= link_to edit_admin_email_path(email), class: 'btn btn-primary' do %>
						<i class="fa fa-pencil"></i> Edit
					<% end %>

					<%= link_to admin_email_path(email), method: :delete, data: {confirm: 'Are you sure you want to delete this email?'}, class: 'btn btn-danger' do %>
						<i class="fa fa-trash"></i> Delete
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<% else %>
	<div class="alert alert-warning">
		There are no system emails.
	</div>
<% end %>

<p class="text-center">
	<%= link_to new_admin_email_path, class: 'btn btn-lg btn-success' do %>
		<i class="fa fa-plus"></i> New System Email
	<% end %>			
</p>