<h2>Ethnicity Options <small><%= @ethnicities.count %> total</small></h2>
<% if @ethnicities.count > 0 %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Option</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @ethnicities.each do |ethnicity| %>
        <tr>
          <td><%= ethnicity.name %></td>
          <td>
            <%= link_to edit_admin_ethnicity_path(ethnicity), class: 'btn btn-primary' do %>
              <i class="fa fa-pencil"></i> Edit
            <% end %>
          </td>
          
          <td>
            <%= link_to admin_ethnicity_path(ethnicity), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this ethnicity option?'} do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    There are no ethnicity options in the system. <%= link_to new_admin_ethnicity_path, 'Click here to add one.' %>
  </div>
<% end %>