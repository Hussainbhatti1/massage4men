<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">
			<i class="fa fa-file-text-o"></i> Static Pages <small><%= @static_pages.count %> total</small>
		</h3>
	</div>
	
	<div class="panel-body">
		<% if @static_pages.count > 0 %>
		  <table class="table table-striped table-condensed table-responsive">
		    <thead>
		      <tr>
		        <th class="col-md-10">Title</th>
		        <th class="col-md-1" colspan="2"></th>
		      </tr>
		    </thead>
    
		    <tbody>
		      <% @static_pages.each do |static_page| %>
		        <tr>
		          <td><%= static_page.title %></td>
		          <td>
		            <%= link_to static_page_path(static_page), class: 'btn btn-success', target: '_blank' do %>
		              <i class="fa fa-eye"></i> View
		            <% end %>
		          </td>
          
		          <td>
		            <%= link_to edit_admin_static_page_path(static_page), class: 'btn btn-primary' do %>
		              <i class="fa fa-pencil"></i> Edit
		            <% end %>
		          </td>
          
		          <td>
		            <%= link_to admin_static_page_path(static_page), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this page?'} do %>
		              <i class="fa fa-trash"></i> Delete
		            <% end %>
		          </td>
		        </tr>
		      <% end %>
		    </tbody>
		  </table>
  
		  <%= link_to 'New Static Page', new_admin_static_page_path, class: 'btn btn-primary' %>
		<% else %>
		  <div class="alert alert-warning">
		    There are no pages in the system. <%= link_to 'Click here to add one.', new_admin_static_page_path %>
		  </div>
		<% end %>		
	</div>
</div>
