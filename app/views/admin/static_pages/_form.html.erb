<%= simple_form_for([:admin, @static_page]) do |f| %>
  <%= f.error_notification %>

  <% ACTIVE_LOCALES.each do |loc| %>
  <h4><%= loc[:name] %></h4>
    <%= f.input "title_#{loc[:code]}", label: 'Title' %>
    <%= f.input "content_#{loc[:code]}", label: 'Content', as: :text, input_html: {class: 'wysihtml5'} %>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>