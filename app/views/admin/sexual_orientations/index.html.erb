<h2>Sexual Orientation Options <small><%= @sexual_orientations.count %> total</small></h2>
<% if @sexual_orientations.count > 0 %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Option</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @sexual_orientations.each do |sexual_orientation| %>
        <tr>
          <td><%= sexual_orientation.name %></td>
          <td>
            <%= link_to edit_admin_sexual_orientation_path(sexual_orientation), class: 'btn btn-primary' do %>
              <i class="fa fa-pencil"></i> Edit
            <% end %>
          </td>
          
          <td>
            <%= link_to admin_sexual_orientation_path(sexual_orientation), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this sexual orientation option?'} do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    There are no sexual orientation options in the system. <%= link_to new_admin_sexual_orientation_path, 'Click here to add one.' %>
  </div>
<% end %>