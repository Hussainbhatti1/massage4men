<h2><i class="fa fa-plane"></i> Airports <small><%= @airports.count %> total</small></h2>
<% if @airports.count > 0 %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Airport Code</th>
        <th>Name</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @airports.order(name: :asc).each do |airport| %>
        <tr>
          <td><%= airport.code %></td>
          <td><%= airport.name %></td>
          <td><%= airport.latitude %></td>
          <td><%= airport.longitude %></td>
          <td>
            <%= link_to edit_admin_airport_path(airport), class: 'btn btn-primary' do %>
              <i class="fa fa-pencil"></i> Edit
            <% end %>
          </td>
          
          <td>
            <%= link_to admin_airport_path(airport), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this airport?'} do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    There are no airports in the system. <%= link_to new_admin_airport_path, 'Click here to add one.' %>
  </div>
<% end %>

