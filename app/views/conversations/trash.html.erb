<% content_for :page_title do %>
  <i class="fa fa-trash"></i> Trash
<% end %>

<% content_for :page do %>
  <% if @conversations.count > 0 %>
  <table class="table table-responsive">
    <thead>
      <tr>
        <th class="col-md-1">From</th>
        <th class="col-md-1"></th>
        <th class="col-md-9">Subject</th>
      </tr>
    </thead>
  
    <tbody>
        <% @conversations.each do |convo| %>
          <tr class="conversation">
            <%= render partial: 'conversations/trash_conversation', locals: {conversation: convo} %>      
          </tr>
        <% end %>
    </tbody>  
  </table>
      
  <div class="text-center">
    <%= paginate @conversations, theme: 'twitter-bootstrap-3' %>
  </div>
  
  <% else %>
    <div class="alert alert-info">
      Your Trash is empty.
    </div>
  <% end %>
<% end %>

<%= render 'shared/conversations_nav', active: 'trash' %>