<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title">
    Reset Your Password
  </h4>
</div>
<div class="modal-body">
	<div class="row">
		<div class="col-md-8">
			<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name, format: :json), html: { method: :post, class: 'reset-password-form' }) do |f| %>
			  <%= f.error_notification %>

			  <div class="form-inputs">
			    <%= f.input :email, required: true, autofocus: true %>
			  </div>

			  <div class="form-actions text-center">
			    <%= f.button :submit, "Reset My Password", class: 'btn btn-lg btn-primary reset-password', href: password_path(resource_name, format: :json) %>
			  </div>
			<% end %>
		</div>

		<div class="col-md-4">
			<p>Once you enter your registered email address, you will receive a message with instructions on how to reset your password.</p>
		</div>
	</div>
</div>