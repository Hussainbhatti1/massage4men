<div class="modal-header">
  <h4 class="modal-title"><%= t(:pic_required_header) %></h4>
</div>

<div class="modal-body">
  <p class="text-center"><%= t(:pic_required_explanation) %></p>
  <p class="text-center"><%= t(:pic_required_explanation_2) %></p>

  <%= simple_form_for(current_user, url: edit_path_for(current_user), html: { class: 'upload-profile-photo' }, method: :put) do |f| %>
    <div class="profile-photo-upload">
      <%= f.label :profile_photo, class: 'center-block' do %>
        <%= image_tag 'upload', class: 'profile-photo-preview thumbnail' %>    
      <% end %>

      <%= f.input_field :profile_photo, class: 'profile-photo-upload-button', data: { auto_upload: true } %>
    </div>
  <% end %>
</div>