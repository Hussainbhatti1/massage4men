<% ads.in_groups_of(3, false) do |group| %>
  <div class="row">
    <% group.each do |ad| %>
      <div class="col-md-12">
        <div class="panel panel-default ad-panel">
          <div class="panel-heading">
            <h3 class="panel-title"><%= ad.massage_type.name %> <%= ad.travel_ad? ? 'Travel' : '' %> Ad</h3>
          </div>
        
          <div class="panel-body">
						<div class="media media-ad">
							<div class="media-left">
                <%= image_tag photo_or_placeholder(ad.primary_photo, :medium_thumb), class: 'media-object' %>
							</div>
							
							<div class="media-body">
								<h4 class="media-heading">About Me</h4>
								<p><%= ad.about_me %></p>
								
								<h4 class="media-heading">About My Services</h4>
								<p><%= ad.about_my_services %></p>
								
								<% if ad.travel_ad? %>
								<h4 class="media-heading">Location &amp; Dates</h4>
								<p>This ad will run in <strong><%= ad.location_string %></strong> from <%= ad.start_date.strftime('%B %-d') %> to <%= ad.end_date.strftime('%B %-d') %>.</p>
								<% end %>
							</div>
							
							<div class="media-right">
								<div class="btn-group-vertical">
                    <%= link_to friendly_ad_path(ad), class: 'btn btn-default' do %>
                      <i class="fa fa-eye"></i> View
                    <% end %>										

                    <%= link_to ad_edit_path(ad), class: 'btn btn-primary' do %>
                      <i class="fa fa-pencil"></i> Edit
                    <% end %>

                    <%= link_to ad_delete_path(ad), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this ad?'} do %>
                      <i class="fa fa-trash"></i> Delete
                    <% end %>
								</div>
							</div>
						</div> <!-- /.media -->
          </div> <!-- /.panel-body -->
        </div> <!-- /.panel-default -->
      </div>
    <% end %>
  </div>
<% end %>
