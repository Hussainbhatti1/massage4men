<div class="modal fade add-photo-modal" id="add-photo-modal" data-ad-index="<%= ad_index %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add Photo to Ad</h4>
      </div>
      <div class="modal-body">
        <p>Click a photo to add it to your ad.</p>
        
        <div class="container-fluid">
          <div class="add-photo-grid">
          <% current_masseur.photos.in_groups_of(4, false).each do |group| %>
            <div class="row photo-grid-condensed">
              <% group.each do |photo| %>
                <% if !@ad || !(@ad.photos.include? photo) %>
                  <div class="col-md-3 add-photo-to-ad" data-ad-index="<%= ad_index %>" data-photo-id="<%= photo.id.to_s %>" data-nsfw="<%= photo.adult? ? 'true' : 'false' %>">
                    <div class="thumbnail">
                      <%= link_to image_tag(photo.picture.url(:thumb), class: 'img-responsive'), '#' %>
                    </div>
                  </div>                
                <% end %>
              <% end %>
            </div>
          <% end %>
          </div> <!-- end add-photo-grid -->
          
          <div class="used-photos">
            
          </div>        
        </div> <!-- end container -->
      </div> <!-- end body -->

    </div><!-- end content -->
  </div><!-- end dialog -->
</div>