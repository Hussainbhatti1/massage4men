<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Messages</h4>
	</div>
	
	<div class="panel-body">
		<div class="list-group">
		  <%= link_to conversations_path, class: "list-group-item#{(active == 'inbox') ? ' active' : ''}" do %>
		    <i class="fa fa-inbox"></i> Inbox <span class="badge"><%= current_user.mailbox.inbox(unread: true).count(:id, distinct: true) %></span>
		  <% end %>

		  <%= link_to sent_conversations_path, class: "list-group-item#{(active == 'sent') ? ' active' : ''}" do %>
		    <i class="fa fa-paper-plane"></i> Sent
		  <% end %>

		  <%= link_to trash_conversations_path, class: "list-group-item#{(active == 'trash') ? ' active' : ''}" do %>
		    <i class="fa fa-trash"></i> Trash
		  <% end %>
		</div> <!-- /.list-group -->		
	</div>
</div>